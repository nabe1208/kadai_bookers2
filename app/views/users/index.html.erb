<!--users_path(/users)-->
<!--New book 投稿機能-->
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/list',user: @user, book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
   <table class="table">
     <thead>
       <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
       </tr>
     </thead>
     <tbody>
       <% @users.each do |users| %>
       <tr>
        <td><%= image_tag users.profile_image, size:"80" %></td>
        <td><%= users.name %></td>
        <td><%= link_to "Show", user_path(users.id) %></td>
       </tr>
       <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>
