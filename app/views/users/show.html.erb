<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render '/books/list',user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
<!--Books一覧 Home-->
     <h3 class="top-heading mt-1">Books</h3>
     <table class="table">
      <thead>
       <tr>
        <th>Title</th>
        <th>Opinion</th>
       </tr>
      </thead>
      <tbody>
      <% @books.each do |books| %>
       <tr>
        <td>
         <%= link_to user_path(books.user_id) do %>
          <%= image_tag books.user.get_profile_image(100,100) %>
         <% end %>
        </td>
        <td><%= link_to books.title, book_path(books.id) %></td>
        <td><%= books.body %></td>
       </tr>
      <% end %>
      </tbody>
     </table>
   </div>
  </div>
</div>
